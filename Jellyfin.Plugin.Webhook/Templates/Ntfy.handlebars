    "topic": "jellyfin",
    {{#if_equals NotificationType 'PlaybackStart'}}
        "priority": 2,
        "icon": "{{{ServerUrl}}}/web/touchicon.f5bbb798cb2c65908633.png",
        "attach": "{{{ServerUrl}}}/Items/{{{ItemId}}}/Images/Primary",
